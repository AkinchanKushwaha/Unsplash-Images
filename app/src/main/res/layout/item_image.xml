<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/item_image_layout_padding">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_image_divider_height"
        android:layout_marginBottom="@dimen/item_image_divider_margin_bottom"
        android:background="@color/colorPrimaryAccent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="@string/image" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/item_image_ll_author_margin_top"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/author"
            android:textSize="@dimen/item_image_ll_author_text_size"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorPrimaryAccent"
            />

        <TextView
            android:id="@+id/textViewAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="William Hook"
            android:layout_marginStart="@dimen/item_image_ll_author_textViewAuthor_margin_start"
            android:textSize="@dimen/item_image_ll_author_textViewAuthor_text_size"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryAccent"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_download"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_image_tv_download_height"
        android:text="@string/download_image"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/item_image_tv_download_margin_top"
        android:textSize="@dimen/item_image_tv_download_text_size"
        android:fontFamily="@font/roboto_bold"
        android:background="@drawable/btn_download"
        />
</LinearLayout>